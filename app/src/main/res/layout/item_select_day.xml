<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="70dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/select_state_selector"
    android:id="@+id/selectDateCardView"
    app:cardBackgroundColor="@color/white"
    android:checkable="true"
    app:checkedIconSize="0dp"
    app:cardForegroundColor="@null"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- TextView for Weekday -->
        <TextView
            android:id="@+id/textViewWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="10dp"
            android:textStyle="normal"
            android:paddingTop="12dp"
            android:textAlignment="center"
            android:layout_gravity="center"
        />

        <!-- TextView for Day (Bold and Bigger) -->
        <TextView
            android:id="@+id/textViewDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="6dp"
            android:textAlignment="center"
            android:layout_gravity="center"
        />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>